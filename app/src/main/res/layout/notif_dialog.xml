<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#0FA1F3"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/event_colourfull_backgroud">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:backgroundTint="@color/black"
                android:background="@drawable/event_black_background"
                >
                <TextView
                    android:id="@+id/title"
                    style="@style/Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FA03A9F4"
                    android:text="TESLA: Innovational"/>

                <TextView
                    android:id="@+id/time"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#CE03A9F4"
                    android:text="12-01-2023"/>

                <ImageView
                    android:id="@+id/imageUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    style="@style/Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginStart="15dp"
                    android:textColor="#A3A2A2"
                    android:text="@string/title_overview"/>
                <TextView
                    android:id="@+id/message"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15dp"
                    android:textColor="#A3A2A2"
                    android:text="Updating Descripton"/>

                <TextView
                    android:id="@+id/description"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15dp"
                    android:textColor="#A3A2A2"
                    android:text=""/>

                <TextView
                    style="@style/Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="#DC8DFA"
                    android:layout_marginStart="15dp"
                    android:text="Links"/>
                <TextView
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="#9B5DB3"
                    android:layout_marginStart="15dp"
                    android:text="Attached Pdf"/>
                <TextView
                    android:id="@+id/pdfLink"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:layout_marginBottom="-3dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text=""/>

            </LinearLayout>
        </LinearLayout>



    </ScrollView>
</androidx.cardview.widget.CardView>
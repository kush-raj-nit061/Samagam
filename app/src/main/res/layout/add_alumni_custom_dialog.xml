<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#0FA1F3"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_colourfull_backgroud">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/event_black_background"
                    >
                    <TextView
                        android:id="@+id/message"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/londrina_solid"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Do you want to make this batch alumni?\nThis change is irreversible. Be sure!"/>

                    <EditText
                        android:id="@+id/etBatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:hint="2021-2025"
                        android:textColorHint="#9D9D9D"
                        android:textAlignment="center"
                        android:textSize="@dimen/_22sdp"
                        android:paddingHorizontal="@dimen/_14sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:background="@drawable/inner_gradienr_edit"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="40dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons_color"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="Cancel"
                            android:textColor="@color/white" />
                        <Button
                            android:id="@+id/confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttons_color"
                            android:gravity="center"
                            android:text="Confirm"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>